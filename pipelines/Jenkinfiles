pipeline{
    agent { label 'built-in' }
    tools{
        maven "3.8.6"
    }
    stages{
        stage("Package Project"){
            steps{
                sh """
                    mvn clean package
                """
            }
        }

        stage("Build Image"){
            steps{
                //registry.asani.pro
                sh """
                    docker build -t registry.asani.pro/spring-app:$BUILD_NUMBER .
                """
            }
        }

        stage("Login and Push Image"){
            steps{
                withCredentials([usernamePassword(credentialsId: 'nexus-auth', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh """
                        docker login -u $USER -p $PASS registry.asani.pro
                        docker push registry.asani.pro/spring-app:$BUILD_NUMBER
                    """
                }
            }
        }

        stage("Package and Push Helm Chart"){
            steps{
                withCredentials([usernamePassword(credentialsId: 'nexus-auth', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh """
                        cd helm-chart
                        yq eval -i '.name = "my-app-uat"' my-app/Chart.yaml
                        yq eval -i '.version = "$BUILD_NUMBER"' my-app/Chart.yaml
                        yq eval -i '.springApp.image.tag = "$BUILD_NUMBER"' my-app/values.yaml
                        helm package my-app

                        curl -u "$USER:$PASS" https://nexus-ui.asani.pro/repository/helm-repo/ --upload-file "my-app-uat-$BUILD_NUMBER.tgz"
                    """
                }
                
            }
        }

    }

}
